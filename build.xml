<project default="compile">

    <target name="compile">
        <mkdir dir="bin"/>
        <path id="build.classpath">
            <fileset dir="jars">
                <include name="**/*.jar"/>
            </fileset>
        </path>
        <javac srcdir="src" destdir="bin">
            <classpath refid="build.classpath"/>
        </javac>
    </target>

    <target name="execute">
        <java classname="Main">
            <classpath>
                <fileset dir="jars">
                    <include name="**/*.jar"/>
                </fileset>
                <pathelement location="bin"/>
            </classpath>
        </java>
    </target>
</project>